// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int           @id @default(autoincrement())
  name             String
  email            String
  telephone        String
  isAdmin          Boolean       @default(false)
  products         Products?     @relation(fields: [productsId], references: [id])
  productsId       Int?
  services         Services?     @relation(fields: [servicesId], references: [id])
  servicesId       Int?
  Communities      Communities?  @relation(fields: [communitiesId], references: [id])
  communitiesId    Int?
}


model Communities {
  id           Int        @id @default(autoincrement())
  name         String
  users        Users[]
}


model Products {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal  @db.Decimal(6, 2)
  image       String
  active      Boolean
  user        Users[]
}

model Services {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal  @db.Decimal(6, 2)
  image       String
  active      Boolean
  user        Users[]
}

